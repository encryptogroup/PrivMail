{
	"manifest_version": 2,
	"name": "PrivMail: Privacy-Preserving Email Transfer Plugin",
	"description": "A plugin that implements a secure transfer and retrieval of emails between users using secret sharing.",
	"version": "1.0",
	"author": "ENCRYPTO",
	"applications": {
		"gecko": {
			"id": "privmail@encrypto.de",
			"strict_min_version": "78.0"
		}
	},
	"background": {
		"page": "background.html"
	},
	"permissions": [
		"compose.send",
		"compose",
		"accountsRead",
		"messagesRead",
		"downloads"
	],
	"compose_action": {
		"default_title": "PrivMail Send",
		"default_icon": "images/encrypto.png"
	},
	"message_display_action": {
		"default_title": "PrivMail Combine",
		"default_icon": "images/encrypto.png"
	},
	"icons": {
		"64": "images/encrypto.png"
	}
}
